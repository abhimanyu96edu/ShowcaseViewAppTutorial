<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--   ''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''      -->

    <style name="CustomShowcaseTheme1" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#3300A621</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle1</item>
        <item name="sv_detailTextAppearance">@style/CustomText1</item>
    </style>

    <style name="CustomTitle1" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#880E4F</item>
    </style>

    <style name="CustomText1" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#C51162</item>
    </style>

